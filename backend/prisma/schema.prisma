generator client{
  provider="prisma-client-js"
}

datasource db{
  provider="postgresql"

}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  cards Card[]
  tags Tag[]
}

model Card{
  id Int @id @default(autoincrement())
  title String
  content String
  pinned Boolean @default(false)
  createdAt DateTime @default(now())
  userId Int
  user User @relation(fields:[userId],references:[id])
  tags CardTag[]
}

model Tag{
  id Int @id @default(autoincrement())
  name String
  userId Int
  user User @relation(fields:[userId],references:[id])
  cards CardTag[]
}

model CardTag{
  id Int @id @default(autoincrement())
  cardId Int
  tagId Int
  card Card @relation(fields:[cardId],references:[id])
  tag Tag @relation(fields:[tagId],references:[id])
}
